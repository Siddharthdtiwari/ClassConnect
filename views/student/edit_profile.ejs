<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Edit Profile</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  <style>
    body {
      font-family: "Inter", sans-serif;
    }

    .bg-brand-background {
      background-color: #f3f4f6;
      background-image: linear-gradient(120deg, #f3e8ff 0%, #eef2f3 100%);
    }

    .text-brand-purple {
      color: #5d3a9b;
    }

    .border-brand-purple {
      border-color: #5d3a9b;
    }

    .btn-lime {
      background-color: #bde045;
      color: #333;
      font-weight: 700;
      transition: background-color 0.3s ease;
      border-radius: 0.5rem;
    }

    .btn-lime:hover {
      background-color: #a8c93a;
    }

    .btn-secondary {
      background-color: #e5e7eb;
      color: #374151;
      font-weight: 600;
      transition: background-color 0.3s ease;
      border-radius: 0.5rem;
    }

    .btn-secondary:hover {
      background-color: #d1d5db;
    }

    .form-input {
      border: 1px solid #d1d5db;
      border-radius: 0.5rem;
      padding: 0.75rem 1rem;
      width: 100%;
      transition: border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .form-input:focus {
      outline: none;
      border-color: #5d3a9b;
      box-shadow: 0 0 0 2px rgba(93, 58, 155, 0.2);
    }
  </style>
</head>
<%- include('../partials/background') %>

<body class="text-gray-800">
  <div class="content-container container mx-auto p-4 sm:p-6 lg:p-8 min-h-screen">
    <header class="mb-8">
      <a href="/student/dashboard" class="text-sm text-brand-purple hover:underline mb-2 block">&larr; Back to Dashboard</a>
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900">
        Edit Profile
      </h1>
      <p class="text-gray-600 mt-1">
        Keep your personal information up to date.
      </p>
    </header>

    <div class="max-w-2xl mx-auto bg-white p-6 sm:p-8 rounded-xl shadow-lg">
      <form id="edit-profile-form" action="/student/edit_profile" method="POST" enctype="multipart/form-data">
        <div class="space-y-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2">Profile Picture</label>
            <div class="flex items-center gap-4">
              <img id="profile-preview" src="<%= student.profilePhoto || 'https://placehold.co/96x96/f3e8ff/5d3a9b?text=' + student.studentName.charAt(0) %>" alt="Current profile picture" class="w-24 h-24 rounded-full object-cover" />
              <div>
                <input type="file" id="profile-picture-input" name="profilePhoto" class="hidden" accept="image/*" />
                <button type="button" id="upload-button" class="px-4 py-2 btn-secondary">
                  Change
                </button>
                <p class="text-xs text-gray-500 mt-2">
                  PNG, JPG up to 4MB.
                </p>
              </div>
            </div>
          </div>

          <div>
            <label for="studentName" class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
            <input type="text" id="studentName" name="studentName" class="form-input" value="<%= student.studentName %>" />
          </div>

          <div>
            <label for="mobileNo" class="block text-sm font-medium text-gray-700 mb-1">Mobile No</label>
            <input type="text" id="mobileNo" name="mobileNo" class="form-input" value="<%= student.mobileNo %>" />
          </div>

          <div>
            <label for="student-id" class="block text-sm font-medium text-gray-700 mb-1">Student ID</label>
            <input type="text" id="student-id" class="form-input bg-gray-100" value="<%= student.studentId %>" readonly />
          </div>
        </div>

        <div class="mt-8 pt-5 border-t border-gray-200 flex justify-end gap-3">
          <button type="button" onclick="window.location.href='/student/dashboard'" class="px-6 py-2 btn-secondary">
            Cancel
          </button>
          <button type="submit" class="px-6 py-2 btn-lime">
            Save Changes
          </button>
        </div>
      </form>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const uploadButton = document.getElementById("upload-button");
      const fileInput = document.getElementById("profile-picture-input");
      const profilePreview = document.getElementById("profile-preview");

      uploadButton.addEventListener("click", () => {
        fileInput.click();
      });

      fileInput.addEventListener("change", (event) => {
        const file = event.target.files[0];
        if (file) {
          const reader = new FileReader();
          reader.onload = (e) => {
            profilePreview.src = e.target.result;
          };
          reader.readAsDataURL(file);
        }
      });
    });
  </script>
</body>

</html>