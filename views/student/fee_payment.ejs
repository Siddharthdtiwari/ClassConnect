<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fee Payment</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Google Fonts: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        /* Custom styles to extend Tailwind */
        body {
            font-family: 'Inter', sans-serif;
        }

        /* Color palette from login page and logo */
        .bg-brand-background {
            background-color: #f3f4f6;
            /* A light gray as a fallback */
            background-image: linear-gradient(120deg, #f3e8ff 0%, #eef2f3 100%);
        }

        .text-brand-purple {
            color: #5d3a9b;
        }

        .border-brand-purple {
            border-color: #5d3a9b;
        }

        /* Button Styles */
        .btn-lime {
            background-color: #bde045;
            color: #333;
            font-weight: 700;
            transition: background-color 0.3s ease;
            border-radius: 0.5rem;
        }

        .btn-lime:hover {
            background-color: #a8c93a;
        }

        .btn-lime:disabled {
            background-color: #cccccc;
            cursor: not-allowed;
        }

        /* Status Badge Styles */
        .status-paid {
            background-color: #dcfce7;
            /* green-100 */
            color: #166534;
            /* green-800 */
        }

        .status-due {
            background-color: #fee2e2;
            /* red-100 */
            color: #991b1b;
            /* red-800 */
        }

        .status-upcoming {
            background-color: #e0f2fe;
            /* blue-100 */
            color: #1e3a8a;
            /* blue-800 */
        }
    </style>
</head>
<%- include('../partials/background') %>

    <body class=" text-gray-800">

        <!-- Main Container -->
        <div class="content-container container mx-auto p-4 sm:p-6 lg:p-8 min-h-screen">

            <!-- Header -->
            <header class="mb-8">
                <a href="/student/dashboard" class="text-sm text-brand-purple hover:underline mb-2 block">&larr; Back to
                    Dashboard</a>
                <h1 class="text-3xl md:text-4xl font-bold text-gray-900">
                    Fee Payment
                </h1>
                <p class="text-gray-600 mt-1">Manage your tuition fees and view payment history.</p>
            </header>

            <!-- Main Content Area -->
            <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

                <!-- Left Column: Current Dues -->
                <div class="lg:col-span-1">
                    <div class="bg-white p-6 rounded-xl shadow-lg h-full">
                        <h2 class="text-2xl font-bold text-gray-900 mb-4">Outstanding Fees</h2>
                        <div class="bg-brand-background p-6 rounded-lg border border-gray-200 text-center">
                            <p class="text-gray-600 text-sm">Amount Due</p>
                            <p class="text-4xl font-bold text-brand-purple my-2">₹<%= totalDue.toLocaleString() %>
                            </p>
                            <p class="text-sm text-red-600 font-semibold">
                                Due by: 10
                                <%= new Date().toLocaleDateString("en-IN", { month: "long" , year: "numeric" }) %>
                            </p>

                        </div>

                        <% if (totalDue > 0) { %>
                            <button 
                                id="pay-button" 
                                class="w-full py-3 mt-6 btn-lime text-lg"
                                data-key="<%= razorpayKeyId %>"
                                data-amount="<%= totalDue %>"
                                data-name="<%= student.studentName %>"
                                data-email="student@example.com"  
                                data-contact="<%= student.mobileNo %>"
                            >
                                Pay ₹<%= totalDue.toLocaleString() %> Now
                            </button>
                        <% } else { %>
                            <button class="w-full py-3 mt-6 btn-lime text-lg" disabled>
                                All Fees Cleared
                            </button>
                        <% } %>
                        <p class="text-xs text-gray-400 mt-4 text-center">You will be redirected to a secure payment
                            gateway.</p>
                    </div>
                </div>

                <!-- Right Column: Payment History -->
                <div class="lg:col-span-2">
                    <div class="bg-white p-6 rounded-xl shadow-lg h-full">
                        <h2 class="text-2xl font-bold text-gray-900 mb-4">Payment History</h2>
                        <div class="space-y-3">
                            <% feesByMonth.forEach(f=> { %>
                                <div
                                    class="flex items-center justify-between p-4 bg-gray-50 rounded-lg border border-gray-200">
                                    <div>
                                        <p class="font-semibold text-gray-800">Tuition Fee - <%= f.month %>
                                        </p>
                                        <% if (f.status==="Paid" ) { %>
                                            <p class="text-sm text-gray-500">
                                                Invoice #<%= student.studentId %> | Paid on: <%=
                                                        new Date(f.datePaid).toLocaleDateString() %>
                                            </p>
                                            <!-- Download Receipt Button -->
                                            <a href="/student/receipt/<%= f._id %>" target="_blank"
                                                class="inline-block mt-2 px-3 py-1 text-xs font-semibold rounded-md bg-purple-200 text-brand-purple hover:bg-purple-300">
                                                Download Receipt
                                            </a>
                                            <% } else if (f.status==="Due" ) { %>
                                                <p class="text-sm text-red-500">Payment pending</p>
                                                <% } else { %>
                                                    <p class="text-sm text-gray-400">Not yet due</p>
                                                    <% } %>


                                    </div>
                                    <div class="text-right">
  <p class="font-bold text-gray-800">
    ₹<%= f.status === "Paid" ? f.amount.toLocaleString() : student.monthlyFee.toLocaleString() %>
  </p>
  <span
    class="px-2 py-1 text-xs font-semibold rounded-full 
    <%= f.status === 'Paid' ? 'status-paid' : f.status === 'Due' ? 'status-due' : 'status-upcoming' %>">
    <%= f.status %>
  </span>
</div>

                                </div>
                                <% }) %>
                        </div>

                    </div>
                </div>


            </div>
        </div>

        <!-- ======================================================== -->
        <!-- ADDED SCRIPTS: These are required for Razorpay to work -->
        <!-- ======================================================== -->
        <!-- 1. Razorpay's official Checkout Script (MANDATORY) -->
        <script src="https://checkout.razorpay.com/v1/checkout.js"></script>
        
        <!-- 2. Your custom script that will handle the payment logic -->
        <script src="/js/payment-handler.js"></script>

    </body>

</html>