<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Class Leaderboard</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Google Fonts: Inter -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        /* Custom styles to extend Tailwind */
        body {
            font-family: 'Inter', sans-serif;
        }

        /* Color palette from login page and logo */
        .bg-brand-background {
            background-color: #f3f4f6;
            /* A light gray as a fallback */
            background-image: linear-gradient(120deg, #f3e8ff 0%, #eef2f3 100%);
        }

        .text-brand-purple {
            color: #5d3a9b;
        }

        .border-brand-purple {
            border-color: #5d3a9b;
        }

        .text-gold {
            color: #f59e0b;
        }

        /* Amber-500 */
        .text-silver {
            color: #a8a29e;
        }

        /* Stone-400 */
        .text-bronze {
            color: #a16207;
        }

        /* Yellow-700 */

        /* Leaderboard card styles */
        .rank-card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            position: relative;
        }

        .rank-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
        }

        .rank-1 {
            border-top: 4px solid #f59e0b;
        }

        .rank-2 {
            border-top: 4px solid #a8a29e;
        }

        .rank-3 {
            border-top: 4px solid #a16207;
        }

        /* List item style */
        .student-row:hover {
            background-color: #f9fafb;
        }

        .highlight-user {
            background-color: #f3e8ff;
            border-left: 4px solid #5d3a9b;
        }

        /* Subtle background pattern */
        .bg-pattern {
            background-color: #ffffff;
            background-image: url("data:image/svg+xml,%3Csvg width='20' height='20' viewBox='0 0 20 20' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%23f3e8ff' fill-opacity='0.4' fill-rule='evenodd'%3E%3Ccircle cx='3' cy='3' r='3'/%3E%3Ccircle cx='13' cy='13' r='3'/%3E%3C/g%3E%3C/svg%3E");
        }
    </style>
</head>
<%- include('../partials/background') %>

    <body class="text-gray-800">

        <!-- Main Container -->
        <div class="content-container container mx-auto p-4 sm:p-6 lg:p-8 min-h-screen">

            <!-- Header -->
            <header class="mb-8">
                <a href="/student/dashboard" class="text-sm text-brand-purple hover:underline mb-2 block">&larr; Back to
                    Dashboard</a>
                <h1 class="text-3xl md:text-4xl font-bold text-gray-900">
                    Class Leaderboard
                </h1>
                <p class="text-gray-600 mt-1">See where you stand among your peers!</p>
            </header>

            <!-- Main Content Area -->
            <div class="bg-pattern p-6 sm:p-8 rounded-xl shadow-lg">

                <!-- Top Performers -->
                <div class="mb-12">
                    <h2 class="text-2xl font-bold text-gray-900 mb-6 text-center">Top Performers</h2>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
                        <% topThree.forEach((student, index)=> {
                            let rankClass = index === 0 ? 'rank-1' : index === 1 ? 'rank-2' : 'rank-3';
                            let sizeClass = index === 0 ? 'w-24 h-24' : 'w-20 h-20';
                            let borderColor = index === 0 ? 'border-amber-400' : index === 1 ? 'border-stone-300' :
                            'border-yellow-800';
                            let textColor = index === 0 ? 'text-gold' : index === 1 ? 'text-silver' : 'text-bronze';
                            %>
                            <div
                                class="rank-card <%= rankClass %> bg-white p-6 rounded-lg border-t-4 border-gray-200 shadow-md md:mt-6 relative">
                                <img src="<%= student.avatar.includes('http') ? student.avatar : 'https://placehold.co/40x40/f3e8ff/5d3a9b?text=' + student.avatar %>"
                                    alt="<%= student.name %>"
                                    class="<%= sizeClass %> rounded-full mx-auto mb-4 border-4 <%= borderColor %>">
                                <h3 class="text-xl font-bold text-gray-800">
                                    <%= student.name %>
                                        (<span class="text-sm text-gray-500">
                                            <%= student.studentId %>
                                        </span>)
                                </h3>

                                <p class="text-gray-500 font-semibold">Rank <%= student.rank %>
                                </p>
                                <p class="text-2xl font-bold text-brand-purple mt-2">
                                    <%= student.score %> Points
                                </p>
                                <div class="absolute top-4 right-4 <%= textColor %>">
                                    <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                                        <path
                                            d="M12 2L9.18 8.5L2 9.27L7.5 14.14L5.82 21L12 17.27L18.18 21L16.5 14.14L22 9.27L14.82 8.5L12 2Z">
                                        </path>
                                    </svg>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                </div>

                <!-- Rest of Leaderboard -->
                <div>
                    <h2 class="text-2xl font-bold text-gray-900 mb-4">All Rankings</h2>
                    <div class="bg-white border border-gray-200 rounded-lg overflow-hidden">
                        <div id="leaderboard-list">
                            <% rest.forEach(student=> {
                                const isCurrentUser = student.name === currentUser;
                                %>
                                <div
                                    class="student-row flex items-center p-3 border-b border-gray-200 transition-colors duration-200 <%= isCurrentUser ? 'highlight-user' : '' %>">
                                    <div class="w-12 text-center text-lg font-bold text-gray-500">
                                        <%= student.rank %>
                                    </div>
                                    <img src="<%= student.avatar.includes('http') ? student.avatar : 'https://placehold.co/40x40/f3e8ff/5d3a9b?text=' + student.avatar %>"
                                        alt="<%= student.name %>" class="w-10 h-10 rounded-full mx-4">

                                    <div class="flex-grow">
                                        <p class="font-semibold text-gray-800">
                                            <%= student.name %>
                                                (<span class="text-sm text-gray-500">
                                                    <%= student.studentId %>
                                                </span>)
                                                <%= isCurrentUser ? '(You)' : '' %>
                                        </p>
                                    </div>
                                    <div class="w-24 text-right font-bold text-brand-purple">
                                        <%= student.score %> pts
                                    </div>
                                </div>
                                <% }) %>
                        </div>
                    </div>
                </div>

            </div>


    </body>

</html>